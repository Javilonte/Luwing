<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraints"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BuscarAd">

    <ViewAnimator
        android:id="@+id/viewAnimator2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateFirstView="true"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/a2uno"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Buscar"
                style="@style/Botones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_rounded"
                android:onClick="BPBuscar"
                android:text="Buscar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SearchUs" />

            <EditText
                android:id="@+id/SearchUs"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_backgraunda"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introducir Código o Usuario"
                android:textColor="#01579B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecylerAd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Buscar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/a2dos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cambiarFotos"
                style="@style/Botones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_rounded"
                android:onClick="CambiarFoto"
                android:text="Foto"
                app:layout_constraintBottom_toTopOf="@+id/EPTerminado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EPDescripcion" />

            <Button
                android:id="@+id/editarDatos"
                style="@style/Botones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:onClick="EditarDatos"
                android:text="Guardar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/EPrecibido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/botonapagado"
                android:onClick="Recibido"
                android:text="Recibido"
                app:layout_constraintBottom_toTopOf="@+id/editarDatos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/EPProceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/botonapagado"
                android:onClick="Proceso"
                android:text="Proceso"
                app:layout_constraintBottom_toTopOf="@+id/editarDatos"
                app:layout_constraintEnd_toStartOf="@+id/EPTerminado"
                app:layout_constraintStart_toEndOf="@+id/EPrecibido" />

            <Button
                android:id="@+id/EPTerminado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/botonapagado"
                android:onClick="Terminado"
                android:text="Terminado"
                app:layout_constraintBottom_toTopOf="@+id/editarDatos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/button_roundedrojo"
                android:onClick="EliminarDatos"
                android:text="Eliminar"
                android:textSize="8sp"

                app:layout_constraintBottom_toBottomOf="@+id/txtEP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txtEP"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/EPUsuario"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_backgraunda"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEP"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/EPDescripcion"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_backgraunda"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EPUsuario" />

            <EditText
                android:id="@+id/EPFecha"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/text_backgraunda"
                android:ems="5"
                android:hint="Fecha"
                android:inputType="date"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/EPNumero"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toEndOf="@+id/EPDescripcion"
                app:layout_constraintTop_toBottomOf="@+id/txtEP"
                app:layout_constraintVertical_bias="0.6" />

            <EditText
                android:id="@+id/EPNumero"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_backgraunda"
                android:ems="10"
                android:hint="Numero de teléfono"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EPDescripcion" />

            <ImageView
                android:id="@+id/EPImagen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/EPProceso"
                app:layout_constraintEnd_toStartOf="@+id/cambiarFotos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EPNumero"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/EPIdProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/EPFecha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/EPUsuario"
                app:layout_constraintTop_toBottomOf="@+id/txtEP" />

            <TextView
                android:id="@+id/txtEP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Proyecto"
                android:textColor="#01579B"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ViewAnimator>

</androidx.constraintlayout.widget.ConstraintLayout>